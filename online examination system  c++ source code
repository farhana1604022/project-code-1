class User {

public:

    string username;
    string password;
     string userID;
    void login()

    {
        ofstream usersFile ("userData.txt");
        if (    !usersFile.is_open())

        {
            usersFile.open("userData.txt");
        }
            usersFile << username << " " << userID<<" "<< password << endl;
            usersFile.close();
    }



};
